@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="form-signin">
    <div class="logo">
        <img src="~/Content/img/logo/logo.png" alt="">
    </div>
    <h2 class="text-center">Sign In to Your Account</h2>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" class="form-control" placeholder="Enter your username" required autofocus>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
        <div class="register-link text-center mt-2">
            <a href="@Url.Action("Register", "Account")">Don't have an account? Register Now</a>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
</div>