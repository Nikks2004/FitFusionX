<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-MzxrJeLrXQllpR4hX7vZKP4Xwi6x5t2bN5rBNg6mrq1YPrs46XzVfP5hsaeXt2E" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            height: 100vh;
            background-color: #1c1c1c;
            color: #f8f9fa;
        }
        .navbar {
            background-color: #343a40;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #e0e0e0;
        }
        .navbar a {
            color: #f8f9fa;
            text-decoration: none;
            margin-left: 15px;
        }
        .main-container {
            display: flex;
            flex: 1;
        }
        .sidebar {
            width: 250px;
            background-color: #2c2c2c;
            padding: 15px;
            border-right: 1px solid #e0e0e0;
        }
        .sidebar h4 {
            margin-top: 0;
            color: #f8f9fa;
        }
        .sidebar a {
            color: #f8f9fa;
            text-decoration: none;
            display: block;
            margin-bottom: 10px;
        }
        .sidebar a:hover {
            color: #007bff;
        }
        .content-wrapper {
            flex: 1;
            padding: 20px;
            background-color: #1c1c1c;
        }
        .table {
            width: 100%;
            border-collapse: collapse;
            color: #f8f9fa;
        }
        .table th, .table td {
            border: 1px solid #555;
            padding: 10px;
            text-align: left;
        }
        .table th {
            background-color: #343a40;
        }
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #2c2c2c;
        }
        .btn {
            padding: 5px 10px;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }
        .btn-success {
            background-color: #28a745;
        }
        .btn-danger {
            background-color: #dc3545;
        }
        .navbar-brand {
            color: #f8f9fa;
            text-decoration: none;
            font-size: 1.5rem;
        }
    </style>
</head>
<body>
<nav class="navbar">
    <div>
        <a class="navbar-brand" href="#">Admin Panel</a>
    </div>
    <div>
        <a href="@Url.Action("Index", "Home")">Home</a>
        <a href="@Url.Action("Logout", "Account")">Logout</a>
    </div>
</nav>
<div class="main-container">
    <div class="sidebar">
        <h4>Navigation</h4>
        
        <a href="@Url.Action("ViewMembers", "Admin")">View Members</a>
        
    </div>
    <div class="content-wrapper">
        @RenderBody()
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha384-ZvpUoO/+PpLXR1lu4jmpXWu80pZlYUAfxl5NsBMWOEPSjUn/6Z/hRTt8+pR6L4N2" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-LtrjvnR4Twt/qOuYxE721u19sVFLVSA4hf/rRt6PrZTmiPltdZcI7q7PXQBYTKyf" crossorigin="anonymous"></script>
<script>
    $(function() {
        $('[data-toggle="tooltip"]').tooltip()
    });
</script>
</body>
</html>
